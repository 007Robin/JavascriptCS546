<div class="row">
    <form method="POST" action="/login" id = "login-form" class="server-form">  
        <div class="form-group">
            <input type="text" id="name" name="username" placeholder="username" value="{{username}}" />
        </div> 
        <div class="form-group">
            <input type="password" id="password" name="password" placeholder="password" /> 
        </div>
        
        {{#if message}}
        <div class="form-group">
            <p class="error-message">{{message}}</p>
        </div>
        {{/if}}

        <div class="form-group">
            <input type="submit" value="login" id="login" />
        </div>

        <footer>
        <p>wrote by: Xin Song</p>
        </footer>
    </form>
</div>